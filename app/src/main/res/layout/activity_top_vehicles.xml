<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".skinTool.ProDressActivity">
    <include layout="@layout/layout_tool"
        android:id="@+id/tool"/>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tool">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <androidx.cardview.widget.CardView
              android:id="@+id/cardViewAdsMain"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_3sdp"
              app:cardCornerRadius="@dimen/_5sdp"
              app:cardElevation="@dimen/_3sdp">

              <FrameLayout
                  android:id="@+id/frameViewAdsMain"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="gone" />

          </androidx.cardview.widget.CardView>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="@dimen/_10sdp"
              android:layout_marginBottom="@dimen/_10sdp"
              android:orientation="horizontal">

              <LinearLayout
                  android:id="@+id/sport"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/_5sdp"
                  android:layout_weight="1"
                  android:background="@drawable/purple_border_shape"
                  android:elevation="@dimen/_2sdp"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="@dimen/_55sdp"
                      android:layout_height="@dimen/_55sdp"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:src="@drawable/ic_sportscar" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:fontFamily="@font/pop_medium"
                      android:text="Sport Car"
                      android:textAlignment="center"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_14ssp" />
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/monster"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/_5sdp"
                  android:layout_weight="1"
                  android:background="@drawable/purple_border_shape"
                  android:elevation="@dimen/_2sdp"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="@dimen/_55sdp"
                      android:layout_height="@dimen/_55sdp"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:padding="@dimen/_2sdp"
                      android:src="@drawable/ic_monstercar" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:fontFamily="@font/pop_medium"
                      android:text="Monster Car"
                      android:textAlignment="center"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_14ssp" />
              </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="@dimen/_10sdp"
              android:layout_marginBottom="@dimen/_10sdp"
              android:orientation="horizontal">

              <LinearLayout
                  android:id="@+id/motocycle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/_5sdp"
                  android:layout_weight="1"
                  android:background="@drawable/purple_border_shape"
                  android:elevation="@dimen/_2sdp"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="@dimen/_55sdp"
                      android:layout_height="@dimen/_55sdp"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:src="@drawable/ic_moto_bike" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:fontFamily="@font/pop_medium"
                      android:text="Moter Cycle"
                      android:textAlignment="center"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_14ssp" />
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/ambhi"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/_5sdp"
                  android:layout_weight="1"
                  android:background="@drawable/purple_border_shape"
                  android:elevation="@dimen/_2sdp"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="@dimen/_55sdp"
                      android:layout_height="@dimen/_55sdp"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:padding="@dimen/_2sdp"
                      android:src="@drawable/ic_amphibian" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/_5sdp"
                      android:fontFamily="@font/pop_medium"
                      android:text="Ambhiblam"
                      android:textAlignment="center"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_14ssp" />
              </LinearLayout>
          </LinearLayout>

      </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</RelativeLayout>