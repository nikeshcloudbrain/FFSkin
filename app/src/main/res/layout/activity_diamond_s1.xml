<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".diamond.DiamondS1Activity">

    <include
        android:id="@+id/tool"
        layout="@layout/layout_tool" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:fontFamily="@font/pop_semibold"
                android:text="1) Season 1 Elite Pass"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="2) Sk Sabir Full Bundle"
                android:textColor="@color/white"
                android:fontFamily="@font/pop_semibold"

                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="3) Hiphop Bundle "
                android:textColor="@color/white"
                android:fontFamily="@font/pop_semibold"

                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="4) Throne Emote "
                android:textColor="@color/white"
                android:fontFamily="@font/pop_semibold"

                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="5) Golden MP40 "
                android:textColor="@color/white"
                android:fontFamily="@font/pop_semibold"

                android:textSize="18dp" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                app:lottie_rawRes="@raw/pro_loading"
                app:lottie_colorFilter="#4ABCFB"
                android:visibility="gone"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>


            <TextView
                android:id="@+id/d1Apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/pop_semibold"
                android:textAlignment="center"
                android:background="@drawable/blue_border_shape"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAdsMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp">

                <FrameLayout
                    android:id="@+id/frameViewAdsMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>